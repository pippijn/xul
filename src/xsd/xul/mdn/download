#!/usr/bin/perl

use common::sense;
use constant URL
   => 'https://developer.mozilla.org/@api/deki/pages/%s/contents?include=true&mode=raw&format=xhtml';

use Dir::Self;
my %pageids = do (__DIR__ . "/pageids.pm");

my $PAGE = $ARGV[0] or die;
my $XML  = $ARGV[1] or die;

my $URL = sprintf URL, $pageids{$PAGE};
#print "  GET    $URL\n";
exec "curl", "-o", $XML, "-s", $URL;
